rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    // Check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if the user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- Rules ---

    // 1. Notes Collection (Root Level)
    // Matches documents like /notes/NOTE_ID
    match /notes/{noteId} {
      // Allow reading if the note belongs to the user
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
      
      // Allow creating if the new note has the correct userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow updating/deleting if the note belongs to the user
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // 2. Users Collection and Subcollections
    // Matches documents like /users/USER_ID
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Transactions Subcollection
      // Matches documents like /users/USER_ID/transactions/TRANSACTION_ID
      match /transactions/{transactionId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isOwner(userId) &&
          resource.data.userId == userId &&
          request.resource.data.userId == userId;
        allow delete: if isOwner(userId);
      }
    }
  }
}
